#!/usr/bin/env bash
# Configure ubuntu server with the following requirements: localhost resolves to 127.0.0.2, facebook.com resolves to 8.8.8.8
# Check if running in Docker
if grep -q docker /proc/1/cgroup; then
    # Configure localhost to resolve to 127.0.0.2
    sudo sed -i 's/^127\.0\.0\.1.*localhost/127.0.0.2 localhost/' /etc/hosts

    # Configure facebook.com to resolve to 8.8.8.8
    sudo sed -i 's/^.*facebook\.com/8.8.8.8 facebook.com/' /etc/hosts

    echo "Configurations updated successfully."
else
    echo "This script should be run inside a Docker container."
fi